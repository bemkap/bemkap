                           , Run K10Temp "0000:00:18.3" ["-t","<Tctl>ºC","-L","40","-H","70","-l","lightblue","-n","#00ff00","-h","#ff0000","-S","True"] 50
                           , Run Com "/home/bemkap/.xmonad/bluetooth.pl" [] "btctl" 50
                           ]
       , sepChar         = "%"
       , alignSep        = "}{"
       , template        = "%XMonadLog% }{ %btctl%<fc=#3377dd>∷</fc>%wlp3s0wi%<fc=#3377dd>∷</fc>%cpu%<fc=#3377dd>∷</fc>%battery%<fc=#3377dd>∷</fc>%k10temp%<fc=#3377dd>∷</fc>%memory%<fc=#3377dd>∷</fc>%date% "
