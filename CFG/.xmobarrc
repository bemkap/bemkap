                           , Run XMonadLog
		           , Run Battery ["-t","<acstatus> <left>%","-L","20","-H","70","-l","#ff0000","-n","yellow","-h","#00ff00",
                                          "--","-o","DIS","-O","CHR","-i","FUL"] 50
