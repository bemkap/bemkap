Config { overrideRedirect = False
       , font            = "Terminus 12"
       , additionalFonts = ["Terminus 12"]
       , bgColor  	 = "#000000"
       , fgColor  	 = "#ffffff"
       , position 	 = TopW L 100
       , commands 	 = [ Run Cpu ["-L","3","-H","50","-h","#ff0000","-n","#00ff00","-t","<total>","-S","True","-p","3"] 50
                    	   , Run Memory ["-t","<used>/<total>","-S","True","-p","6"] 50
